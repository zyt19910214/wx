.board {
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  background-color:#ffffff;
  margin-bottom: 15px;
}

.board-item {
  display: flex;
  font-size:13px; 
  flex: 1;
  cursor: pointer;
  margin-top: 3rpx;
  margin-left:15px;
  padding: 2rpx;
  background: #fff;
  border-bottom: 0.5rpx rgb(211, 211, 211) solid;
  line-height: 50px;
}


.board-item .location{
  flex: 1;
  line-height: 45rpx;
  padding-right:30rpx;
  margin-left: 15px;
  margin-top: 8px;
  width: 80%;
  
}
.board-item .location2{
  width: 80%;
}
.board-item  view {
  font-size: 13px;
  margin-left: 15px;
}

.board-item  image {
  padding-top: 20rpx;
  width:60rpx;
  height: 60rpx;
}

image {
  width: 100%;
  height:400rpx;
  display: inline-block;
  overflow: hidden;
}

/* 底部 */

.homeBottom {
  padding-bottom: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.homeBottom .bottomLine {
  height: 1rpx;
  width: 50rpx;
  background: rgb(202, 201, 201);
  margin: 0 15rpx;
}

.homeBottom .bottomWord {
  font-size: 30rpx;
  color: rgb(202, 201, 201);
}

.bgInfo {
  margin: 20rpx 10rpx 20rpx 10rpx;
  border: 0.5rpx #ee6a50 dotted;
  border-radius: 10rpx;
  text-align: center;
  background: #ee6a50;
  color: white;
  height: 65rpx;
  line-height: 65rpx;
  font-size: 28rpx;
}

.navigator-arrow {
  padding-right: 26rpx;
  position: relative;
  margin-right: 0px;
}
.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);

  top: 50%;
  margin-top: -8rpx;
  right: 28rpx;

}
