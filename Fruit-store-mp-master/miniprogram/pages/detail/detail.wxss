/* miniprogram/pages/detail/detail.wxss */

page {
  background-color: rgb(245, 249, 253);
}

/* 图片 */

.detail-image {
  width: 100%;
  height: 600rpx;
}

.detail-image image {
  width: 100%;
  height: 100%;
}

/* 详细信息 */

.detail-info {
  background-color: white;
}

.detail-info .line1 {
  padding: 30rpx 30rpx 10rpx 30rpx;
  font-size: 28rpx;
}

.detail-info .line1 view {
  height: 60px;
  overflow: hidden;
  width: 100%px;
  box-sizing: border-box;
  padding: 0 10px;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;

 
}

.detail-info .line2 {
  padding: 10rpx 25rpx 30rpx 25rpx;
  display: flex;
  justify-content: space-between;
  font-size: 25rpx;
  color: grey;
}

.detail-info .line2 .price {
  margin-left: 16px;
  font-size: 32rpx;
  color: #ee6a50
  
}

.detail-info .line2 .purchaseFreq {
  padding-top: 9rpx;
}

.detail-info .line2 .iLike {
  padding-top: 9rpx;
}

/* 其他信息 */

.other-info {
  background-color: white;
  padding: 0rpx;
  margin-top: 10rpx;
  height: 900rpx;
}
.goods-content{
  margin-left: 10rpx;
  font-size: 25rpx;
}

/* 底部导航 */

.detail-nav {
  position: fixed;
  display: flex;
  bottom: 0rpx;
  box-shadow: 0 0 8rpx 0;
  height: 100rpx;
  width: 750rpx;
  line-height: 100rpx;
  text-align: center;
}

.detail-nav .cart {
  background-color: white;
  width: 120rpx;
  padding-top: 0rpx;
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: center;
}

.detail-nav .cart image {
  width: 75rpx;
  height: 55rpx;
  margin: 10rpx 0 0 0rpx;
  padding: 0 13rpx 5rpx 19rpx;
}

.detail-nav .cart view {
  font-size: 18rpx;
  height: 35rpx;
  line-height: 30rpx;
}

.detail-nav .addToCart {
  background-color: orange;
  flex: 1;
  color: white;
  height: 100%
}



/* 详细信息 */

.goods-tab-nav {
  display: inline-block;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 1rpx solid #ededed;
  box-sizing: border-box;
  font-size: 35rpx;
  padding-left: 53rpx;
  color: #c7c7cb;
}

.goods-tab-nav.on {
  color: rgba(255, 132, 132, 0.979);
  border-bottom: 5rpx solid rgba(255, 132, 132, 0.979);
}

.theDetail {
  padding: 40rpx;
}
